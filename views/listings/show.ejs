<% layout("/layouts/boilerplate.ejs") %>
  
 <div class="card-1 row" >
    <div class="col-6 offset-3" >
        <h3>Listing Details :</h3>
            <img src="<%= listing.image %>" class="card-img-top" style="height: 20rem;" alt="listing">
            <div class="card-body">
                <p class="card-text">
                    <ul>
                        <li><%= listing.title %></br></li>
                        <li><%= listing.description %></br></li>
                        <li> &#8377; <%= listing.price.toLocaleString("en-IN") %> / night</br></li>
                        <li><%= listing.location %></br></li>

                    </ul>
                
                </p>
            </div>

                <a href="/listing/<%= listing._id %>/edit">
                    <button class="btn edt-btn">Edit this listing</button> 
                </a>
            <!-- delete listing -->
                <br><br>
                <form method="post" action="/listing/<%=listing._id%>?_method=Delete">
                    <button class="btn btn-dark">Delete this listing</button>
                </form>

            </div>
        </div>
    


