<% layout("/layouts/boilerplate.ejs") %>
<body>
    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
        <% for(let listing of Listings){ %>
            <a href="/listing/<%=listing._id%>" class="listing-link">
        <div class="card" >
            <img src="<%= listing.image %>" class="card-img-top" style="height: 20rem;" alt="listing">
            <div class="card-img-overlay"></div>
            <div class="card-body">
                <p class="card-text">
                    <ul>
                        <li><%= listing.title %></br></li>
                        <li><%= listing.description %></br></li>
                        <li> &#8377; <%= listing.price.toLocaleString("en-IN") %> / night</br></li>
                        <li><%= listing.location %></br></li>

                    </ul>
                
                </p>
            </div>
        </div>
        </a>
        <% } %>
        </div>
   
</body>

